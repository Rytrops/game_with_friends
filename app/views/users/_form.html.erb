<%= form_with model: user do |form| %>
    <div>
      <%= form.label :username %><br>
      <%= form.text_field :username %>
      <% user.errors.full_messages_for(:username).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  
    <div>
      <%= form.label :email_address %><br>
      <%= form.email_field :email_address %><br>
      <% user.errors.full_messages_for(:email_address).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
    <%= form.label :steam_id %><br>
    <%= form.text_field :steam_id %><br>
    <% user.errors.full_messages_for(:steam_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
    <div>
      <%= form.submit %>
    </div>

  <% end %>