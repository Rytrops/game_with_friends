<li> <%= link_to "Return to index", root_path %> </li>
<% if @looking_at_self %>
<li> <%= link_to "Add Game to Library", user_add_game_path(@user) %> </li>

<li><%= link_to "Edit User", edit_user_path(@user) %>

<li><%= link_to "Delete User", user_path(@user),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
                  <% end %>

<div class="container-fluid bg-secondary border">
    <div class ="text-center ">
        <h1>Welcome to <%= @user.username %>'s profile </h1>
        <br>
        <br>
        <br>
    </div>
  <div class="row col">
    <div class="col-md-3">
        <h2> Contact Info: </h2>
        <a class="font-weight-bold"> Email Address: </a> <%= @user.email %>
        <p class="font-weight-bold"> Steam Id: </p> <%=  @user.steam_id %> 
    </div>
    <div class="col-md-6">
        <table>
        <tr>
        <th>Game Name</th>
        <th>Developer </th>
        <th>Number of Players</th>
        </tr>
        <% @user.videogames.each do |game| %>
            <tr>
            <td><%= link_to "#{game.game_name}", videogame_path(game) %></td>
            <td><%= game.developer %></td>
            <td><%= game.number_of_players %></td>
            <% if current_user == @user %>
                <td> <%= button_to "Remove from library", user_remove_game_path(@user), params: {game_id: game.id}, data: {confirm: "Are you sure?"} %></td>
            <% end %>
                </tr>
        <%end%>
    </table>
    </div>
    <div class="col-md-3">
      One of three columns
    </div>
  </div>
</div>