<p id="notice"><%= notice %></p>

<h1>Videogames</h1>

<table>
  <thead>
    <tr>
      <th>Game name</th>
      <th>Developer</th>
      <th>Number of players</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videogames.each do |videogame| %>
      <tr>
        <td><%= videogame.game_name %></td>
        <td><%= videogame.developer %></td>
        <td><%= videogame.number_of_players %></td>
        <td><%= link_to 'Show', videogame %></td>
        <td><%= link_to 'Edit', edit_videogame_path(videogame) %></td>
        <td><%= link_to 'Destroy', videogame, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Videogame', new_videogame_path %>
